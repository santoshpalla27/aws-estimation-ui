{
  "type": "object",
  "properties": {
    "instance_type": {
      "type": "string",
      "title": "Instance Type",
      "enum": [
        "t3.micro",
        "t3.small",
        "t3.medium",
        "t3.large",
        "m5.large",
        "m5.xlarge",
        "m5.2xlarge",
        "c5.large",
        "c5.xlarge",
        "r5.large",
        "r5.xlarge"
      ],
      "default": "t3.medium"
    },
    "instance_count": {
      "type": "integer",
      "title": "Instance Count",
      "minimum": 1,
      "maximum": 1000,
      "default": 1
    },
    "operating_system": {
      "type": "string",
      "title": "Operating System",
      "enum": ["Linux", "Windows", "RHEL", "SUSE"],
      "default": "Linux"
    },
    "subnet_type": {
      "type": "string",
      "title": "Subnet Type",
      "enum": ["public", "private"],
      "default": "private"
    },
    "internet_access": {
      "type": "boolean",
      "title": "Internet Access Required",
      "default": true
    },
    "load_balanced": {
      "type": "boolean",
      "title": "Use Load Balancer",
      "default": false
    },
    "ebs_volumes": {
      "type": "array",
      "title": "EBS Volumes",
      "items": {
        "type": "object",
        "properties": {
          "volume_type": {
            "type": "string",
            "enum": ["gp3", "gp2", "io2", "io1"],
            "default": "gp3"
          },
          "size_gb": {
            "type": "integer",
            "minimum": 1,
            "maximum": 16384,
            "default": 100
          }
        }
      },
      "default": [
        {
          "volume_type": "gp3",
          "size_gb": 100
        }
      ]
    },
    "estimated_monthly_egress_gb": {
      "type": "number",
      "title": "Estimated Monthly Data Transfer Out (GB)",
      "minimum": 0,
      "default": 100
    }
  },
  "required": ["instance_type"]
}
