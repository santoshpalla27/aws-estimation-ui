{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Application Load Balancer Configuration",
    "required": [
        "lcu_per_hour"
    ],
    "properties": {
        "lcu_per_hour": {
            "type": "number",
            "title": "LCU per Hour",
            "description": "Load Balancer Capacity Units (new connections, active connections, bandwidth, rule evaluations)",
            "minimum": 1,
            "default": 5
        },
        "availability_zones": {
            "type": "integer",
            "title": "Availability Zones",
            "minimum": 1,
            "maximum": 6,
            "default": 2
        },
        "target_type": {
            "type": "string",
            "title": "Target Type",
            "enum": [
                "instance",
                "ip",
                "lambda"
            ],
            "default": "instance"
        }
    }
}