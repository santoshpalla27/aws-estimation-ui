{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Amazon CloudWatch Configuration",
    "required": [
        "log_ingestion_gb",
        "log_storage_gb"
    ],
    "properties": {
        "custom_metrics_count": {
            "type": "integer",
            "title": "Custom Metrics",
            "description": "Number of custom metrics published",
            "minimum": 0,
            "default": 10
        },
        "log_ingestion_gb": {
            "type": "number",
            "title": "Log Ingestion (GB/month)",
            "minimum": 0,
            "default": 10
        },
        "log_storage_gb": {
            "type": "number",
            "title": "Log Storage (GB)",
            "minimum": 0,
            "default": 50
        },
        "log_retention_days": {
            "type": "integer",
            "title": "Log Retention (days)",
            "enum": [
                1,
                3,
                5,
                7,
                14,
                30,
                60,
                90,
                120,
                150,
                180,
                365,
                400,
                545,
                731,
                1827,
                3653
            ],
            "default": 30
        },
        "alarms_count": {
            "type": "integer",
            "title": "Alarms",
            "description": "Number of CloudWatch alarms (first 10 free)",
            "minimum": 0,
            "default": 5
        }
    }
}