{
  "type": "object",
  "properties": {
    "api_type": {
      "type": "string",
      "title": "API Type",
      "enum": ["REST", "HTTP", "WebSocket"],
      "default": "REST",
      "description": "Type of API Gateway"
    },
    "requests_per_month": {
      "type": "integer",
      "title": "Requests per Month",
      "default": 1000000,
      "minimum": 1,
      "description": "Number of API requests per month"
    },
    "average_message_size_kb": {
      "type": "number",
      "title": "Average Message Size (KB)",
      "default": 32,
      "minimum": 1,
      "description": "Average size of API request/response"
    },
    "enable_caching": {
      "type": "boolean",
      "title": "Enable Caching",
      "default": false,
      "description": "Enable API Gateway caching"
    },
    "cache_size_gb": {
      "type": "number",
      "title": "Cache Size (GB)",
      "enum": [0.5, 1.6, 6.1, 13.5, 28.4, 58.2, 118, 237],
      "default": 0.5,
      "description": "Cache size in GB"
    },
    "cache_ttl_hours": {
      "type": "number",
      "title": "Cache TTL (hours)",
      "default": 1,
      "minimum": 0,
      "maximum": 3600,
      "description": "Time to live for cached responses"
    }
  },
  "required": ["api_type", "requests_per_month"]
}
